{
	"manifest_version": 3,
	"name": "CSS Selector Counter",
	"version": "1.0",
	"description": "Counts the total elements with a specific CSS selector on the current page.",
	"action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"permissions": [
		"activeTab",
		"scripting"
	],
	"icons": {
		"48": "icon.png"
	},
	 "background": {
		"service_worker": "background.js"
	}
}
